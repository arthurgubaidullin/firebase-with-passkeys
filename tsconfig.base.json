{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "exactOptionalPropertyTypes": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@firebase-with-passkeys/auth-get-user-api": [
        "auth/get-user/api/src/index.ts"
      ],
      "@firebase-with-passkeys/auth-user-repository": [
        "auth/user-repository/src/index.ts"
      ],
      "@firebase-with-passkeys/functions": ["functions/src/index.ts"],
      "@firebase-with-passkeys/https-callable-client-enforcer": [
        "https-callable-enforcer/client/src/index.ts"
      ],
      "@firebase-with-passkeys/https-callable-server-enforcer": [
        "https-callable-enforcer/server/src/index.ts"
      ],
      "@firebase-with-passkeys/passkeys-types": ["passkeys/types/src/index.ts"],
      "@firebase-with-passkeys/uint8-array": [
        "io-ts-types/uint8-array/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
