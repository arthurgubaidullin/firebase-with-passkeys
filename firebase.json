{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "dist/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": ["npm run build"],
      "runtime": "nodejs18"
    }
  ],
  "emulators": {
    "auth": {
      "host": "localhost",
      "port": 9099
    },
    "functions": {
      "host": "localhost",
      "port": 5001
    },
    "firestore": {
      "host": "localhost",
      "port": 8080
    },
    "pubsub": {
      "host": "localhost",
      "port": 8085
    },
    "storage": {
      "host": "localhost",
      "port": 9199
    },
    "eventarc": {
      "host": "localhost",
      "port": 9299
    },
    "logging": {
      "host": "localhost",
      "port": 4500
    },
    "hub": {
      "host": "localhost",
      "port": 4400
    },
    "ui": {
      "host": "localhost",
      "enabled": true
    },
    "singleProjectMode": true
  }
}
