{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx", "fp-ts"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "fp-ts/no-lib-imports": "error",
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "*",
                "onlyDependOnLibsWithTags": ["*"]
              },
              {
                "sourceTag": "tier:use-case",
                "onlyDependOnLibsWithTags": ["tier:use-case", "tier:lib"],
                "bannedExternalImports": [
                  "firebase-admin",
                  "firebase-admin/*",
                  "firebase-functions",
                  "firebase-functions/*"
                ]
              },
              {
                "sourceTag": "tier:api",
                "onlyDependOnLibsWithTags": [
                  "tier:api",
                  "tier:use-case",
                  "tier:lib"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    }
  ]
}
